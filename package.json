{
  "name": "hello-santa",
  "version": "0.0.0",
  "private": true,
  "description": "Real-time chat with a 3D Santa featuring lip-sync via viseme blendshapes",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm --filter web dev\" \"pnpm --filter media-gateway dev\"",
    "dev:web": "pnpm --filter web dev",
    "dev:gateway": "pnpm --filter media-gateway dev",
    "build": "pnpm --filter web build && pnpm --filter media-gateway build",
    "build:web": "pnpm --filter web build",
    "build:gateway": "pnpm --filter media-gateway build",
    "lint": "pnpm --recursive lint",
    "typecheck": "pnpm --recursive typecheck"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
